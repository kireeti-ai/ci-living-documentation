{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",

    "rootDir": "src",
    "outDir": "dist",

    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,

    "strict": true,
    "skipLibCheck": true,

    "types": ["node"],
    "typeRoots": ["./node_modules/@types"]
  },
  "include": ["src"]
}
