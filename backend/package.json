{
  "name": "ci-living-documentation-backend",
  "version": "1.0.0",
  "type": "module",
  "description": "Backend for CI Living Documentation",
  "main": "dist/app.js",
  "scripts": {
    "dev": "tsx watch src/app.ts",
    "build": "npx tsc",
    "start": "node dist/app.js",
    "start:dev": "npx tsx --watch src/app.ts",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "tsx src/db/migrate.ts",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.700.0",
    "@supabase/supabase-js": "^2.95.3",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.34.1",
    "express": "^4.21.0",
    "jsonwebtoken": "^9.0.2",
    "ngrok": "^5.0.0-beta.2",
    "nodemailer": "^6.9.15",
    "pg": "^8.13.0",
    "resend": "^6.9.1",
    "supabase": "^2.75.5",
    "uuid": "^10.0.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.25",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^22.7.5",
    "@types/nodemailer": "^6.4.22",
    "@types/pg": "^8.11.10",
    "@types/uuid": "^10.0.0",
    "drizzle-kit": "^0.25.0",
    "tsx": "^4.19.1",
    "typescript": "^5.9.3"
  }
}
